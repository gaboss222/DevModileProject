<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="hearc.ch.roleplay.GameActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtGameDescription"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:maxLines="100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_weight="0.07"
        android:fontFamily="casual"
        android:scrollbars="vertical"
        android:text="Description du jeu de role"
        android:textColor="@color/colorPrimaryDark3"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btnRep1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Button1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRep2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text="Button2"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRep3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text="Button3"
            android:textColor="@color/colorPrimaryDark3"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />


</RelativeLayout>